#!/usr/bin/env bpftrace
#include <linux/fs.h>
BEGIN
{
  printf("Counting vfs_statfs for cifs... Hit Ctrl-C to end.\n");
}

kprobe:vfs_statfs /strncmp(str(((struct path *)arg0)->dentry->d_sb->s_type->name), "cifs", 4) == 0/ {
  @counter[pid, comm] = count();
}

END
{
        printf("\nTop 10 vfs_statfs process:\n");
        print(@counter, 10);
        clear(@counter);
}